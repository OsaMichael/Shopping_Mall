@model Shop.Web.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Browse Brands";
}

<div class="category">
    <h3><em>@Model.Categoree.Name</em> Brands</h3>
    <ul id="album-list">
        @foreach (var album in Model.Categoree.Brands)
        {
            <li>
                <a href="@Url.Action("Details", new { id = album.BrandId })">
                    <img alt="@album.BrandName" src="@album.BrandUrl" /><span>@album.BrandName</span>
                </a>
            </li>
        }
    </ul>
</div>